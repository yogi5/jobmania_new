                android:layout_height="wrap_content"
                android:text="@string/languages"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/edt_languages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:hint="English,Hindi"
                android:background="@color/color_transparent"
                android:layout_below="@+id/txt_languages"
                android:textSize="@dimen/lbl_txtsize"
                android:singleLine="true"
                android:layout_marginBottom="13dp"/>
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_job_perfernce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/job_perfernce"
                android:textColor="@color/textColorPrimary"
                android:layout_below="@id/edt_languages"
                android:textSize="@dimen/lbl_txtsize"/>
            <RadioGroup
                android:id="@+id/radio_btn_group_job_perfernce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_job_perfernce"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_time"
                    android:checked="true"
                    android:layout_weight="1"
                    android:id="@+id/radioButton_full_time"/>
                <RadioButton
                    android:id="@+id/radioButton_part_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/part_time"

                    android:layout_weight="1"/>
