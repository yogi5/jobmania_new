                    android:src="@drawable/edit"
                    android:id="@+id/resume_edit"
                    android:layout_weight="0.25"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="40dp"
