                android:text="Upload Resume"
                android:textColor="@color/btn_textColor"
                android:background="@drawable/btnshape"
                android:layout_below="@+id/radio_btn_group_physically_challeged"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_below="@+id/btn_upload"
                android:layout_alignRight="@+id/btn_upload"
                android:id="@+id/linearlayoutchangeresume"
                android:weightSum="1">
