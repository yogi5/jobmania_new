<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:padding="5dp">

        <TextView
            android:id="@+id/txt_jobname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lbl_txtsize"

            android:text="hello"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/list_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_jobname1"
            android:layout_marginTop="5dp"
            android:src="@drawable/diploma"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/txt_jobdetails1"
            android:textSize="@dimen/lbl_txtsize"
            android:text="hello"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/list_image1"
            android:layout_below="@+id/txt_jobname1"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/list_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_jobdetails1"
            android:src="@drawable/graduation"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:id="@+id/txt_jobskill1"
            android:textSize="@dimen/lbl_txtsize"
            android:text="hello"
            android:layout_below="@+id/txt_jobdetails1"
            android:layout_toRightOf="@+id/list_image2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_edit11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="italic"
            android:textAllCaps="true"
            android:layout_marginTop="7dp"
android:layout_below="@+id/txt_jobdetails1"
            android:layout_toLeftOf="@+id/txt_preview"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_preview"
            android:text="Preview"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/txt_jobdetails1"
          android:layout_toLeftOf="@+id/txt_delete"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_delete"
            android:text="Delete"
            android:textAllCaps="true"
            android:layout_below="@+id/txt_jobdetails1"
            android:textStyle="italic"
            android:layout_marginTop="7dp"
android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

</RelativeLayout>

