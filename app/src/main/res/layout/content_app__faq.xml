<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.youngindia.jobportal.ui.App_Faq"
    tools:showIn="@layout/activity_app__faq">
    <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="example.com.youngindia.aboutus.Feedback"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_FAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently \n  Asked  \n Question"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:minLines="3" />
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                android:layout_below="@+id/tv_FAQ"
                android:layout_marginBottom="10dp"/>
            <View
                android:id="@+id/v_line1"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#DCDCDC"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_header"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_bold_1st"
                android:text="Lorem Ipsum has been the industry's ."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line1"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="false" />
            <TextView
                android:id="@+id/tv_ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                android:layout_below="@+id/tv_bold_1st"
                android:layout_marginBottom="10dp"/>
            <View
                android:id="@+id/v_line2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#DCDCDC"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_ans1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_bold_2nd"
                android:text="Lorem Ipsum has been the industry's ."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line2"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="false"
                />
            <TextView
                android:id="@+id/tv_ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                android:layout_below="@+id/tv_bold_2nd"
                android:layout_marginBottom="10dp"/>
            <View
                android:id="@+id/v_line3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#DCDCDC"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_ans3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/tv_bold_3nd"
                android:text="Lorem Ipsum has been the industry's ."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_line3"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="false" />
            <TextView
                android:id="@+id/tv_ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                android:layout_below="@+id/tv_bold_3nd"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
