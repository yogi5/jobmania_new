<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youngindia.jobportal.ui.employee_registration1">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.youngindia.jobportal.ui.fragment_employee_registration">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/name1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_name"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/Ed_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>

                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:layout_below="@+id/input_layout_name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_user_name"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_username"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/Ed_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:inputType="text"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:layout_below="@+id/txt_username"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>
                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_below="@+id/input_layout_user_name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_password"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/Ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:inputType="text"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>
                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:id="@+id/txt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_password"
                    android:layout_below="@+id/input_layout_password"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_confirm_password"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/Ed_confirm_password1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:inputType="text"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"
                    android:id="@+id/tv_email"
                    android:text="@string/email"
                    android:layout_below="@id/input_layout_confirm_password"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_email"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:layout_below="@+id/input_layout_email"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"
                    android:id="@+id/tv_mob"
                    android:text="@string/contact"
                    android:layout_below="@id/input_layout_email"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_contact_no"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_mob"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/Ed_contact"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edt_height_normal"
                        android:background="@color/color_transparent"
                        android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                        android:layout_below="@+id/tv_mob"
                        android:textSize="@dimen/lbl_txtsize"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:minEms="10"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:id="@+id/linearlayout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                    android:layout_below="@+id/input_layout_contact_no"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <com.youngindia.jobportal.fonts.Roboto_Regular
                        android:id="@+id/txt_dob"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/lbl_txtsize"
                        android:text="@string/dob"
                        android:layout_weight="1"
                        android:textColor="@color/textColorPrimary"/>
                    <EditText
                        android:background="@drawable/spinner_shape"
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_weight="1.64"
                        android:text=""/>
                    <Button
                        android:id="@+id/btnChangeDate"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:background="@drawable/calendar_icon"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"
                    android:id="@+id/tv_gender"
                    android:text="@string/gender"
                    android:layout_below="@id/linearlayout"/>
                <RadioGroup
                    android:id="@+id/radio_btn_group_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gender"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/mrgin_btwn_edtText">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:id="@+id/radioButton_male"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:contextClickable="true"
                        android:layout_weight="1"
                        android:id="@+id/radioButton_female" />
                </RadioGroup>
                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:id="@+id/txt_higheredu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Higher Education"
                    android:layout_below="@+id/radio_btn_group_gender"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layouthighredu"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/txt_higheredu"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/Ed_higheredu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_height_normal"
                    android:background="@color/color_transparent"
                    android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                    android:layout_below="@+id/input_layouthighredu"
                    android:textSize="@dimen/lbl_txtsize"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:minEms="10" />
                </android.support.design.widget.TextInputLayout>
