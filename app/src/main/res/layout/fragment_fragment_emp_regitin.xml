<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youngindia.jobportal.ui.fragment_emp_regitin"
    android:background="@color/backgd_light_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview1"
        android:padding="16dp"
        android:layout_gravity="center_horizontal|bottom">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_keyskill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_skill"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/edt_keySkills"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:background="@color/color_transparent"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                android:layout_below="@+id/txt_keyskill"
                android:textSize="@dimen/lbl_txtsize"
                android:singleLine="true" />
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_curent_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_company"
                android:textColor="@color/textColorPrimary"
                android:layout_below="@id/edt_keySkills"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/edt_curent_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:background="@color/color_transparent"
                android:layout_marginBottom="13dp"
                android:layout_below="@+id/txt_curent_company"
                android:textSize="@dimen/lbl_txtsize"
                android:singleLine="true"/>
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_curent_company_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/company_role"
                android:textColor="@color/textColorPrimary"
                android:layout_below="@id/edt_curent_company"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/edt_curent_company_role"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:background="@color/color_transparent"
                android:layout_below="@+id/txt_curent_company_role"
                android:textSize="@dimen/lbl_txtsize"
                android:singleLine="true"
                android:layout_marginBottom="13dp"/>

            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:textColor="@color/textColorPrimary"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_perfer"
                android:layout_below="@+id/edt_curent_company_role"
                android:textSize="@dimen/lbl_txtsize"/>
            <LinearLayout
                android:id="@+id/linearlayout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/spinner_shape"
                android:layout_below="@+id/tv_location"
                android:weightSum="1"
                android:layout_marginBottom="13dp">
                <Spinner
                    android:id="@+id/spinner_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/location_name"
                    android:prompt="@string/location"
                    android:contextClickable="true"
                    android:textColor="@color/textColorPrimary"/>
            </LinearLayout>
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:textColor="@color/textColorPrimary"
                android:id="@+id/tv_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Industry"
                android:textSize="@dimen/lbl_txtsize"
                android:layout_below="@id/linearlayout_location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearlayout_04"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                android:background="@drawable/spinner_shape"
                android:layout_below="@+id/tv_industry"
                android:weightSum="1">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_Industry"
                    android:entries="@array/industry_name"
                    android:prompt="@string/industry"
                    android:contextClickable="true"
                    android:textColor="@color/textColorPrimary"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="0.5">
                </Spinner>
            </LinearLayout>
            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:id="@+id/edt_others"
                android:text="hello"
                android:singleLine="true"
                android:layout_below="@+id/linearlayout_04"
                android:visibility="visible"
                android:layout_weight="0.5"/>
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:textColor="@color/textColorPrimary"
                android:layout_weight="1"
                android:textSize="@dimen/lbl_txtsize"
                android:text="@string/total_experecnce"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_others"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/experience_TV"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_Experience"
                android:max="50"
                android:indeterminate="false"
                android:layout_below="@+id/experience_TV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textProgress"
                android:layout_below="@+id/seekBar_Experience"
                />
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:textColor="@color/textColorPrimary"
                android:layout_weight="1"
                android:textSize="@dimen/lbl_txtsize"
                android:text="@string/expected_slry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/expectedSalary_TV"
                android:layout_below="@+id/textProgress"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_ExpectedSalary"
                android:max="20000"
                android:progress="@integer/abc_config_activityDefaultDur"
                android:indeterminate="false"
                android:layout_below="@+id/expectedSalary_TV"            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textProgressSalry"
                android:layout_below="@+id/seekBar_ExpectedSalary"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText"/>


    <Button
        android:id="@+id/btnChangeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Date" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>
</ScrollView>
    <com.youngindia.jobportal.fonts.Roboto_Regular_Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:text="Next"
        android:textSize="@dimen/btn_txtsize"
        android:background="@drawable/btnshape"
        android:textColor="@color/btn_textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/linearlayout_04"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>