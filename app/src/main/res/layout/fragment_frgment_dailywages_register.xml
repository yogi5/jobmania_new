            <LinearLayout
                android:id="@+id/linerlayout_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/spinner_shape"
                android:layout_below="@+id/radiogroup_skilled"
                android:layout_marginBottom="10dp"
                android:visibility="gone">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_profession"
                    android:entries="@array/profession_name"
                    android:prompt="@string/profession"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contextClickable="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/linerlayout_profession"
                android:id="@+id/linearlayout_dailywages"
                android:visibility="gone">

                <com.youngindia.jobportal.fonts.Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/lbl_txtsize"
                    android:id="@+id/tv_wages"
                    android:text="Wages per day"
                    android:layout_margin="5dp"
                    android:layout_below="@id/linearlayout_dailywages"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayout_wages"
                    android:orientation="horizontal"
                    android:background="@drawable/spinner_shape"
                    android:layout_below="@+id/tv_wages"
                    android:layout_marginBottom="13dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/wages_rs"
                        android:hint="Location"
                        android:id="@+id/spinner_wages"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </Spinner>
                </LinearLayout>

            </LinearLayout>
            <!--</LinearLayout>-->
        </RelativeLayout>
    </ScrollView>
    <com.youngindia.jobportal.fonts.Roboto_Regular_Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:id="@+id/btndailywagerregister"
        android:text="Register"
        android:textSize="@dimen/btn_txtsize"
        android:background="@drawable/btnshape"
        android:textColor="@color/btn_textColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom" />
</FrameLayout>