<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgd_light_blue"
    android:layout_height="match_parent"
    tools:context="com.youngindia.jobportal.ui.frgment_dailywages_register"
    android:paddingBottom="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/btn_height">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.youngindia.jobportal.ui.DailyWagesRegstr"
            tools:showIn="@layout/activity_daily_wages_regstr">
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_Daily_wages"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/Ed_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:inputType="text"
                android:background="@color/color_transparent"
                android:layout_weight="2"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                android:layout_below="@+id/txt_name"
                android:textSize="@dimen/lbl_txtsize"
                android:singleLine="true"/>
            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:id="@+id/txt_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textColor="@color/textColorPrimary"
                android:layout_weight="1"
                android:layout_below="@id/Ed_name"
                android:textSize="@dimen/lbl_txtsize"/>
            <EditText
                android:id="@+id/Ed_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edt_height_normal"
                android:background="@color/color_transparent"
                android:layout_weight="2"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText"
                android:layout_below="@+id/txt_contact"
                android:textSize="@dimen/lbl_txtsize"
                android:maxLength="10"
                android:inputType="number"
                android:singleLine="true"/>

            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"
                android:id="@+id/tv_loction"
                android:text="@string/location"
                android:layout_below="@id/Ed_contact"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearlayout_location"
                android:orientation="horizontal"
                android:background="@drawable/spinner_shape"
                android:layout_below="@+id/tv_loction"
                android:layout_marginBottom="13dp">
                <Spinner
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/state_name"
                    android:hint="Location"
                    android:id="@+id/spinner_location"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </Spinner>
            </LinearLayout>

            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"
                android:id="@+id/tv_city"
                android:text="City"
                android:layout_below="@id/linearlayout_location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearlayout_city"
                android:orientation="horizontal"
                android:background="@drawable/spinner_shape"
                android:layout_below="@+id/tv_city"
                android:layout_marginBottom="13dp">
                <Spinner
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/cities"
                    android:hint="Location"
                    android:id="@+id/spinner_city"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                </Spinner>
            </LinearLayout>

