            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearlayout_city"
                android:id="@+id/otherlocality"
                android:background="@color/color_transparent"
                android:singleLine="true"
                android:visibility="gone"
                android:textSize="@dimen/lbl_txtsize"/>

            <com.youngindia.jobportal.fonts.Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/lbl_txtsize"
                android:id="@+id/tv_gender"
                android:text="@string/gender"
                android:layout_below="@id/otherlocality"/>
            <RadioGroup
                android:id="@+id/radiogroup_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gender"
                android:weightSum="2"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:id="@+id/radioButton_male"
                    android:checked="false" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:id="@+id/radioButton_female" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radiogroup_skilled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_below="@+id/radiogroup_gender"
                android:gravity="center"
                android:layout_marginBottom="@dimen/mrgin_btwn_edtText">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skilled"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:id="@+id/radioButton_skill"
                    android:checked="false" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unskilled"
                    android:contextClickable="true"
                    android:layout_weight="1"
                    android:id="@+id/radioButton_unskill" />
            </RadioGroup>
